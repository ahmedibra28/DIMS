generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  email               String   @unique
  name                String
  image               String?
  bio                 String?
  mobile              Int?
  address             String?
  password            String
  confirmed           Boolean  @default(false)
  blocked             Boolean  @default(false)
  resetPasswordToken  String?
  resetPasswordExpire BigInt?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  role   Role   @relation(fields: [roleId], references: [id], onDelete: Restrict)
  roleId String

  notices  Notice[]
  schools  School[]
  courses  Course[]
  subjects Subject[]

  assignCourses  AssignCourse[]
  assignSubjects AssignSubject[]
  transactions   Transaction[]
  lessonPlans    LessonPlan[]

  studentsAsCreatedBy    Student[]    @relation("CreatedByToStudent")
  instructorsAsCreatedBy Instructor[] @relation("CreatedByToInstructor")

  student   Student? @relation("UserToStudent", fields: [studentId], references: [id], onDelete: Restrict)
  studentId String?

  instructor   Instructor?   @relation("UserToInstructor", fields: [instructorId], references: [id], onDelete: Restrict)
  instructorId String?
  examinations Examination[]
  Suggestions  Suggestion[]
  resources    Resource[]
  attendances  Attendance[]

  @@map("users")
}

model Role {
  id          String   @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  name        String   @unique
  type        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users             User[]
  permissions       Permission[]
  clientPermissions ClientPermission[]
  notices           Notice[]

  @@map("roles")
}

model Permission {
  id          String   @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  name        String
  method      Method
  route       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  role Role[]

  @@unique([method, route])
  @@map("permissions")
}

model ClientPermission {
  id          String   @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  name        String   @unique
  sort        Int
  menu        String
  path        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  role Role[]

  @@map("client_permissions")
}

model School {
  id        String   @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  name      String
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  course      Course[]
  createdBy   User     @relation(fields: [createdById], references: [id], onDelete: Restrict)
  createdById String

  @@map("schools")
}

model Course {
  id           String   @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  name         String
  price        Float    @default(0)
  duration     Int
  examinations String[]
  certificate  String?
  enrolment    String?
  status       Status   @default(ACTIVE)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  school        School         @relation(fields: [schoolId], references: [id], onDelete: Restrict)
  schoolId      String
  subject       Subject[]
  createdBy     User           @relation(fields: [createdById], references: [id], onDelete: Restrict)
  createdById   String
  assignCourses AssignCourse[]
  transactions  Transaction[]

  @@map("courses")
}

model Subject {
  id              String    @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  name            String
  semester        Int
  theoryMarks     Int
  practicalMarks  Int
  hasActiveExam   Boolean?  @default(false)
  examDescription String?
  examDate        DateTime?
  status          Status    @default(ACTIVE)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  course         Course          @relation(fields: [courseId], references: [id], onDelete: Restrict)
  courseId       String
  createdBy      User            @relation(fields: [createdById], references: [id], onDelete: Restrict)
  createdById    String
  assignSubjects AssignSubject[]
  lessonPlans    LessonPlan[]
  examinations   Examination[]
  resources      Resource[]

  @@unique([semester, name, courseId])
  @@map("subjects")
}

model Student {
  id                String        @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  rollNo            String
  name              String
  placeOfBirth      String
  dateOfBirth       String
  nationality       String
  sex               Sex
  education         String
  district          String
  mobile            Int
  contactName       String
  contactMobile     Int
  contactEmail      String
  contactRelation   String
  somaliLanguage    LanguageLevel
  arabicLanguage    LanguageLevel
  englishLanguage   LanguageLevel
  kiswahiliLanguage LanguageLevel
  image             String?
  note              String?
  balance           Float         @default(0)
  status            Status        @default(ACTIVE)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  createdBy   User   @relation("CreatedByToStudent", fields: [createdById], references: [id], onDelete: Restrict)
  createdById String

  user User[] @relation("UserToStudent")

  assignCourses AssignCourse[]
  transactions  Transaction[]

  @@map("students")
}

model Instructor {
  id              String   @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  rollNo          String
  name            String
  placeOfBirth    String
  dateOfBirth     String
  nationality     String
  sex             Sex
  email           String
  qualification   String
  experience      String
  district        String
  mobile          Int
  contactName     String
  contactMobile   Int
  contactEmail    String
  contactRelation String
  image           String?
  note            String?
  status          Status   @default(ACTIVE)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  createdBy   User   @relation("CreatedByToInstructor", fields: [createdById], references: [id], onDelete: Restrict)
  createdById String

  user User[] @relation("UserToInstructor")

  assignSubjects AssignSubject[]

  @@map("instructors")
}

model Notice {
  id        String   @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  title     String
  note      String
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  roles       Role[]
  createdBy   User   @relation(fields: [createdById], references: [id], onDelete: Restrict)
  createdById String

  @@map("notices")
}

model AssignCourse {
  id        String   @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  semester  Int
  shift     Shift
  discount  Float    @default(0)
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student      Student       @relation(fields: [studentId], references: [id], onDelete: Restrict)
  studentId    String
  course       Course        @relation(fields: [courseId], references: [id], onDelete: Restrict)
  courseId     String
  createdBy    User          @relation(fields: [createdById], references: [id], onDelete: Restrict)
  createdById  String
  examinations Examination[]
  attendances  Attendance[]

  @@map("assign_courses")
}

model AssignSubject {
  id        String   @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  semester  Int
  shift     Shift
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  instructor   Instructor   @relation(fields: [instructorId], references: [id], onDelete: Restrict)
  instructorId String
  subject      Subject      @relation(fields: [subjectId], references: [id], onDelete: Restrict)
  subjectId    String
  createdBy    User         @relation(fields: [createdById], references: [id], onDelete: Restrict)
  createdById  String
  attendances  Attendance[]

  @@map("assign_subjects")
}

model LessonPlan {
  id            String   @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  title         String
  note          String?
  file          String
  status        Status   @default(ACTIVE)
  isApproved    Boolean  @default(false)
  isCreatedRead Boolean  @default(true)
  isAdminRead   Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  subject     Subject @relation(fields: [subjectId], references: [id], onDelete: Restrict)
  subjectId   String
  createdBy   User    @relation(fields: [createdById], references: [id], onDelete: Restrict)
  createdById String

  @@map("lesson_plans")
}

model Resource {
  id        String   @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  title     String
  note      String?
  file      String
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subject     Subject @relation(fields: [subjectId], references: [id], onDelete: Restrict)
  subjectId   String
  createdBy   User    @relation(fields: [createdById], references: [id], onDelete: Restrict)
  createdById String

  @@map("resources")
}

model Examination {
  id             String   @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  examination    String
  semester       Int
  theoryMarks    Float
  practicalMarks Float
  status         Status   @default(ACTIVE)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  assignCourse   AssignCourse @relation(fields: [assignCourseId], references: [id], onDelete: Restrict)
  assignCourseId String

  subject   Subject @relation(fields: [subjectId], references: [id], onDelete: Restrict)
  subjectId String

  createdBy   User   @relation(fields: [createdById], references: [id], onDelete: Restrict)
  createdById String

  @@map("examinations")
}

model Suggestion {
  id        String   @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  title     String
  body      String
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   User   @relation(fields: [createdById], references: [id], onDelete: Restrict)
  createdById String

  @@map("suggestions")
}

model Attendance {
  id        String   @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  isPresent Boolean  @default(false)
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   User   @relation(fields: [createdById], references: [id], onDelete: Restrict)
  createdById String

  assignCourse    AssignCourse  @relation(fields: [assignCourseId], references: [id], onDelete: Restrict)
  assignCourseId  String
  assignSubject   AssignSubject @relation(fields: [assignSubjectId], references: [id], onDelete: Restrict)
  assignSubjectId String

  @@map("attendances")
}

model Transaction {
  id            String          @id @default(dbgenerated("nanoid()")) @db.VarChar(21)
  type          TransactionType
  semester      Int?
  shift         Shift?
  amount        Float           @default(0)
  discount      Float           @default(0)
  reference     String?
  description   String?
  status        Status          @default(ACTIVE)
  paymentStatus PaymentStatus?  @default(UNPAID)
  paymentMethod PaymentMethod?  @default(CASH)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   User    @relation(fields: [createdById], references: [id], onDelete: Restrict)
  createdById String
  student     Student @relation(fields: [studentId], references: [id], onDelete: Restrict)
  studentId   String
  course      Course? @relation(fields: [courseId], references: [id], onDelete: Restrict)
  courseId    String?

  @@map("transactions")
}

enum Method {
  GET
  POST
  PUT
  DELETE
}

enum Status {
  ACTIVE
  INACTIVE
  DELETED
  GRADUATED
  PASSED
}

enum Sex {
  MALE
  FEMALE
}

enum LanguageLevel {
  FLUENT
  GOOD
  FAIR
}

enum Shift {
  MORNING
  AFTERNOON
}

enum TransactionType {
  ENROLLMENT_FEE
  TUITION_PAYMENT
  EXAM_FEE
  SCHOLARSHIP_DISBURSEMENT
  REFUND_ENROLLMENT_FEE
  REFUND_TUITION_PAYMENT
  REFUND_EXAM_FEE
  REFUND_SCHOLARSHIP_DISBURSEMENT
}

enum PaymentStatus {
  PAID
  UNPAID
}

enum PaymentMethod {
  CASH
  EVC_WALLET
  SYSTEM
}
